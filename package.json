{
  "name": "jekyll-writer",
  "version": "0.2.0",
  "main": "app.js",
  "description": "A Jekyll blog writer client",
  "license": "MIT",
  "repository": "https://github.com/JekyllWriter/JekyllWriter",
  "dependencies": {
    "jquery": "^2.1.4",
    "normalize.css": "^3.0.3",
    "font-awesome": "^4.5.0",
    "angular": "^1.4.8",
    "autosize": "^3.0.14",
    "js-yaml": "^3.4.6",
    "crypto-js": "^3.1.5",
    "kramed": "^0.5.5",
    "github": "^0.2.4",
    "github-markdown-css": "^2.1.1",
    "mathjax": "^2.5.1",
    "adm-zip": "^0.4.7"
  },
  "devDependencies": {
    "electron-packager": "^5.1.1"
  },
  "scripts": {
    "start": "electron .",
    "build-win": "electron-zip-packager . \"Jekyll Writer\" --ignore=\"node_modules/electron-*|built|userdata|proxy.conf\" --out=built --platform=win32 --icon=images/logo512.ico --arch=x64 --version=0.35.4",
    "build-win32": "electron-zip-packager . \"Jekyll Writer\" --ignore=\"node_modules/electron-*|built|userdata|proxy.conf\" --out=built --platform=win32 --icon=images/logo512.ico --arch=ia32 --version=0.35.4",
    "build-osx": "electron-zip-packager . \"Jekyll Writer\" --ignore=\"node_modules/electron-*|built|userdata|proxy.conf\" --out=built --platform=darwin --icon=images/logo512.icns --arch=x64 --version=0.35.4",
    "build-lin": "electron-zip-packager . \"Jekyll Writer\" --ignore=\"node_modules/electron-*|built|userdata|proxy.conf\" --out=built --platform=linux --arch=x64 --version=0.35.4",
    "build": "electron-zip-packager . \"Jekyll Writer\" --ignore=\"node_modules/electron-*|built|userdata|proxy.conf\" --out=built --platform=all --icon=images/logo512 --arch=x64 --version=0.35.4"
  }
}
